<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primaryBg"
    tools:context="cn.com.zlct.diamondgo.activity.UserInfoActivity">
    <include layout="@layout/toolbar_right_text"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorWhite"
        android:layout_marginTop="5dp">
        <LinearLayout
            android:id="@+id/ll_userHead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/colorWhite"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">
            <TextView
                android:id="@+id/tv_userHead"
                android:layout_width="0dp"
                android:layout_weight="0.72"
                android:layout_height="wrap_content"
                android:text="头像"
                android:textSize="16sp"
                android:textColor="@color/colorDeepGray"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="0.23"
                android:layout_height="wrap_content"
                android:padding="6dp">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sdv_userHead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    fresco:roundAsCircle="true"
                    fresco:failureImage="@drawable/ic_launcher"
                    fresco:failureImageScaleType="centerCrop"
                    fresco:actualImageScaleType="centerCrop"
                    fresco:viewAspectRatio="1"/>
                <cn.com.zlct.diamondgo.custom.CircleImageView
                    android:id="@+id/iv_userHead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"/>
                <cn.com.zlct.diamondgo.custom.SectorProgressBar
                    android:id="@+id/spb_userHead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>
            </RelativeLayout>
            <!--<ImageView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:src="@drawable/arrow_right_gray"/>-->
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorLightGray"
            android:layout_marginLeft="10dp"/>
        <LinearLayout
            android:id="@+id/ll_userAlias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/colorWhite"
            android:padding="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:textSize="16sp"
                android:textColor="@color/colorDeepGray"/>
            <TextView
                android:id="@+id/tv_userAlias"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/colorDeepBlack"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_right_gray"
                android:layout_marginLeft="6dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorLightGray"
            android:layout_marginLeft="10dp"/>
        <LinearLayout
            android:id="@+id/ll_userGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/colorWhite"
            android:padding="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性别"
                android:textSize="16sp"
                android:textColor="@color/colorDeepGray"/>
            <TextView
                android:id="@+id/tv_userGender"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/colorDeepBlack"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_right_gray"
                android:layout_marginLeft="6dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorLightGray"
            android:layout_marginLeft="10dp"/>
        <!--<TextView-->
            <!--android:id="@+id/tv_userCard"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:drawableRight="@drawable/arrow_right_gray"-->
            <!--android:padding="12dp"-->
            <!--android:text="我的银行卡"-->
            <!--android:textSize="16sp"-->
            <!--android:textColor="@color/colorDeepGray"/>-->
    </LinearLayout>
</LinearLayout>
