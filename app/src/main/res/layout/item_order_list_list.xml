<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp"
    android:descendantFocusability="blocksDescendants">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_list"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@+id/tv_tj"
        fresco:failureImage="@drawable/img_fail"
        fresco:failureImageScaleType="centerCrop"
        fresco:placeholderImage="@drawable/img_loading"
        fresco:viewAspectRatio="1" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/tv_lv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="16sp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="center" />
        <TextView
            android:id="@+id/tv_lv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="type"
            android:textSize="12sp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="center_horizontal" />
        <TextView
            android:id="@+id/tv_lv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="money"
            android:textSize="16sp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="center" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_lv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x1"
        android:textSize="16sp"
        android:layout_margin="10dp"
        android:gravity="center" />
</LinearLayout>