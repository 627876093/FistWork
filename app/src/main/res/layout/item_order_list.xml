<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">
        <TextView
            android:id="@+id/order_tv_Account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="订单号:123456789"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"/>
        <TextView
            android:id="@+id/order_tv_State"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单状态"
            android:textSize="16sp"
            android:layout_marginRight="5dp"/>
    </LinearLayout>
    <cn.com.zlct.diamondgo.custom.ListViewInScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/order_lv"
        android:visibility="gone"
        focusable="false" />
    <LinearLayout
        android:id="@+id/order_lv_tk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/order_lv_sdv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            fresco:failureImage="@drawable/img_fail"
            fresco:failureImageScaleType="centerCrop"
            fresco:placeholderImage="@drawable/img_loading"
            fresco:viewAspectRatio="1" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/order_tv_lv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退款编号:123456"
                android:textSize="16sp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="center" />
            <TextView
                android:id="@+id/order_tv_lv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退款金额:￥123456"
                android:textSize="16sp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="center" />
            <TextView
                android:id="@+id/order_tv_lv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退款状态:成功"
                android:textSize="16sp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/order_tv_Price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="合计：￥5464"
        android:textSize="16sp"
        android:layout_marginRight="5dp"
        android:padding="15dp"
        android:gravity="right"/>
    <LinearLayout
        android:id="@+id/ll_sh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/order_tv_btn1"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:background="@drawable/bg_textview_whrte"
            android:text="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/order_tv_btn2"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:background="@drawable/bg_textview_whrte"
            android:text="2"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
</LinearLayout>