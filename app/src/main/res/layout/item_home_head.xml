<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <cn.com.zlct.diamondgo.custom.AutoScrollViewPager
                android:id="@+id/vp_home_Auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <cn.com.zlct.diamondgo.custom.NavView
                android:id="@+id/nv_home_Auto"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                app:checkedImg="@drawable/nv_home_checked"
                app:padding="20"
                app:uncheckedImg="@drawable/nv_home_normal" />
        </RelativeLayout>
        <!--&lt;!&ndash;通宝理财&ndash;&gt;-->
        <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:orientation="horizontal">-->

            <!--<View-->
                <!--android:layout_width="5dp"-->
                <!--android:layout_height="20dp"-->
                <!--android:layout_margin="10dp"-->
                <!--android:background="@color/colorPrimary" />-->

            <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:gravity="center_vertical"-->
                <!--android:padding="10dp"-->
                <!--android:text="通宝理财"-->
                <!--android:textSize="16sp"-->
                <!--android:textColor="@color/colorBlack"/>-->
        <!--</LinearLayout>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_homeShortcut1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:drawableTop="@drawable/icon_shortcut1"
                android:gravity="center"
                android:padding="10dp"
                android:text="我的二维码" />

            <TextView
                android:id="@+id/tv_homeShortcut3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:drawableTop="@drawable/icon_shortcut3"
                android:gravity="center"
                android:padding="10dp"
                android:text="通宝专区" />

            <TextView
                android:id="@+id/tv_homeShortcut4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:drawableTop="@drawable/icon_shortcut4"
                android:gravity="center"
                android:padding="10dp"
                android:text="常见问答" />
            <TextView
                android:id="@+id/tv_homeShortcut2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:drawableTop="@drawable/icon_shortcut2"
                android:gravity="center"
                android:padding="10dp"
                android:text="" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/colorLightGray" />
        <!--活动专区-->
        <LinearLayout
            android:id="@+id/ll_hdzq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="5dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:background="@color/colorPrimary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="新品专区"
                android:textSize="16sp"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="全部"
                android:textSize="14sp"
                android:drawableRight="@drawable/icon_right"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorLightGray" />
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rv_homeHead"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/colorLightGray" />

        <LinearLayout
            android:id="@+id/ll_cnxh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="5dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:background="@color/colorPrimary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="热销商品"
                android:textSize="16sp"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="全部"
                android:textSize="14sp"
                android:drawableRight="@drawable/icon_right"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorLightGray" />
    </LinearLayout>
</LinearLayout>