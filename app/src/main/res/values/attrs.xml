<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 扇形进度条 -->
    <declare-styleable name="SectorProgressBar">
        <attr name="max" format="integer"/>
        <attr name="ratio" format="float"/>
        <attr name="shape">
            <enum name="circle" value="0"/>
            <enum name="rect" value="1"/>
        </attr>
    </declare-styleable>

    <!-- 联动ViewPager的圆点 -->
    <declare-styleable name="NavView">
        <attr name="checkedImg" format="reference"/>
        <attr name="uncheckedImg" format="reference"/>
        <attr name="count" format="integer"/>
        <attr name="padding" format="integer"/>
    </declare-styleable>

    <declare-styleable name="depthProgressBar">
        <attr name="maxs" format="integer"/>
        <attr name="shapes">
            <enum name="circle" value="0"/>
            <enum name="rect" value="1"/>
        </attr>
    </declare-styleable>

</resources>